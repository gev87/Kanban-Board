{
  "compilerOptions": {
    "target": "es2024",
    "module": "ESNext",
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["es2024", "dom"]
  },
  "include": ["src", "global.d.ts", "tsconfig.json"],
  "exclude": ["node_modules", "**/__tests__/**"]
}
